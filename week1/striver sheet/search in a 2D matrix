class Solution {
public:
    bool searchMatrix(vector<vector<int>>& mat, int target) {
        int low=0;
        int n=mat[0].size();
        int mid;
        int high=mat.size()*mat[0].size()-1;
        while(low<=high)
        {
            mid=low+(high-low)/2;
            if(mat[mid/n][mid%n]==target)
                return true;
            else if(mat[mid/n][mid%n]<target)
                low=mid+1;
            else
                high=mid-1;
        }
        return false;
    }
};
